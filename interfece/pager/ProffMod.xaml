                        <Image Source="/Recourse/poits.png"
                               HorizontalAlignment="Right"
                               Margin="180,0,0,0"/>
                    </StackPanel>
                </Button>
            </Border>
            
            <TextBlock
                FontSize="26"
                Foreground="Black"
                Margin="20,5,10,5" 
                FontWeight="Bold"
                Text="Б"/>
